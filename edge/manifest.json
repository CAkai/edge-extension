{
  "manifest_version": 3,
  "name": "My Sidebar Extension",
  "version": "1.0",
  "description": "An Edge extension with a sidebar feature.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "permissions": [
    "sidePanel"
  ],
  "action": {
    "default_title": "Click to open sidebar"
  }
}
