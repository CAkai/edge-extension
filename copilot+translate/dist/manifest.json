{
  "manifest_version": 3,
  "default_locale": "zh_TW",
  "name": "__MSG_extensionName__",
  "version": "0.2.0",
  "description": "__MSG_extensionDescription__",
  "icons": {
    "16": "logo/16.png",
    "48": "logo/48.png",
    "128": "logo/128.png"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "sidePanel",
    "contextMenus",
    "storage"
  ],
  "background": {
    "service_worker": "service-worker-loader.js",
    "type": "module"
  },
  "options_ui": {
    "page": "src/apps/options/index.html"
  },
  "side_panel": {
    "default_path": "src/apps/side-panel/index.html",
    "open_at_install": true,
    "open_at_update": true
  },
  "web_accessible_resources": [
    {
      "matches": [
        "<all_urls>"
      ],
      "resources": [
        "*.js",
        "*.css",
        "*.svg",
        "logo/128.png",
        "logo/48.png",
        "logo/16.png"
      ],
      "use_dynamic_url": false
    }
  ]
}
